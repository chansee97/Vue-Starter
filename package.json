  },
  "keywords": [
    "vitailse",
    "tailwindcss",
    "vite",
    "vitesse"
  ],
  "scripts": {
    "dev": "vite --mode dev ",
    "dev:test": "vite --mode test ",
    "dev:prod": "vite --mode prod ",
    "build": "vite build",
    "preview": "vite preview",
    "lint:fix": "eslint . --fix",
    "stylelint:fix": "npx stylelint *.{css,scss,vue,less,html} --fix"
  },
  "dependencies": {
    "@unocss/reset": "^0.53.4",
    "@vueuse/core": "^10.2.1",
    "axios": "^1.4.0",
    "nprogress": "^0.2.0",
    "pinia": "^2.1.6",
    "vue": "^3.3.4",
    "vue-router": "^4.2.2"
  },
  "devDependencies": {
    "@chansee97/eslint-config-vue": "^0.3.5",
    "@chansee97/stylelint-config": "^0.3.5",
    "@types/node": "^20.4.5",
    "@types/nprogress": "^0.2.0",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vitejs/plugin-vue-jsx": "^3.0.1",
    "eslint": "^8.43.0",
    "lint-staged": "^13.2.3",
    "naive-ui": "^2.34.4",
    "simple-git-hooks": "^2.8.1",
    "stylelint": "^15.9.0",
    "typescript": "^5.0.4",
