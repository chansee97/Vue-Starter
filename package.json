{
  "name": "virtuoso",
  "version": "0.1.0",
  "author": "Rock Chen",
  "license": "MIT",
  "homepage": "https://github.com/chansee97/virtuoso",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chansee97/virtuoso.git"
  },
  "bugs": {
    "url": "https://github.com/chansee97/virtuoso/issues"
  },
  "keywords": [
    "vitailse",
    "tailwindcss",
    "vite",
    "vitesse"
  ],
  "scripts": {
    "dev": "vite --mode dev --port 5200 --open",
    "dev:test": "vite --mode test ",
    "dev:prod": "vite --mode prod ",
    "build": "vite build --mode prod",
    "preview": "vite preview",
    "lint:fix": "eslint . --fix",
    "stylelint:fix": "npx stylelint *.{css,scss,vue,less,html} --fix",
    "postinstall": "npx simple-git-hooks"
  },
  "dependencies": {
    "@unocss/reset": "^0.57.2",
    "@vueuse/core": "^10.5.0",
    "axios": "^1.6.1",
    "nprogress": "^0.2.0",
    "pinia": "^2.1.7",
    "vue": "^3.3.8",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@chansee97/eslint-config-vue": "^0.3.5",
    "@chansee97/stylelint-config": "^0.3.5",
    "@iconify-json/icon-park-outline": "^1.1.12",
    "@types/node": "^20.9.0",
    "@types/nprogress": "^0.2.3",
    "@vitejs/plugin-vue": "^4.4.1",
    "@vitejs/plugin-vue-jsx": "^3.0.2",
    "eslint": "^8.43.0",
    "lint-staged": "^15.0.2",
    "naive-ui": "^2.35.0",
    "simple-git-hooks": "^2.9.0",
    "stylelint": "^15.11.0",
    "typescript": "^5.0.4",
    "unocss": "^0.57.2",
    "unplugin-auto-import": "^0.16.7",
    "unplugin-vue-components": "^0.25.2",
    "unplugin-vue-router": "^0.7.0",
    "vite": "^4.5.0",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-pwa": "^0.16.7",
    "vite-plugin-vue-layouts": "^0.8.0",
    "vue-tsc": "^1.8.22"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{css,scss,less,html}": [
      "stylelint --fix"
    ],
    "*.vue": [
      "eslint --fix",
      "stylelint --fix"
    ]
  }
}
